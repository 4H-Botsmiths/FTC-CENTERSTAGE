{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Deploy",
      "type": "shell",
      "dependsOn": [
        "Connect",
        "Install",
        "Launch"
      ],
      "dependsOrder": "sequence",
      "problemMatcher": []
    },
    {
      "label": "Connect",
      "type": "shell",
      "command": "adb reconnect offline && adb connect 192.168.43.1", //&& adb reconnect offline",
      "problemMatcher": []
    },
    {
      "label": "Install",
      "type": "process",
      "command": "${workspaceFolder}/gradlew",
      "args": [
        "InstallDebug"
      ],
      "problemMatcher": [
        "$gradle"
      ]
    },
    {
      "label": "Launch",
      "type": "shell",
      "command": "adb shell am start -n \"com.qualcomm.ftcrobotcontroller/org.firstinspires.ftc.robotcontroller.internal.PermissionValidatorWrapper\" -a android.intent.action.MAIN -c android.intent.category.LAUNCHER",
      "problemMatcher": [],
    },
    {
      "label": "Assemble",
      "type": "process",
      "command": "${workspaceFolder}/gradlew",
      "args": [
        "AssembleDebug"
      ],
      "problemMatcher": [
        "$gradle"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ],
}